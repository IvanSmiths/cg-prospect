// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["selectRelationCount"]
}

model Texture {
  id Int @default(autoincrement()) @id
  title String @unique
  slug String
  mainImage String
  scale String
  location String
  png2k String
  png2ksize String?
  png4k String
  png4ksize String?
  png8k String
  png8ksize String?
  jpg2k String
  jpg2ksize String?
  jpg4k String
  jpg4ksize String?
  jpg8k String
  jpg8ksize String?
  published String?
  sponsorImage String
  sponsorName String
  sponsorLink String
  category Category[]
  method     Method[]
  author    User?    @relation(fields: [authorId], references: [id])
  authorId  Int?
}

model Model3d {
  id Int @default(autoincrement()) @id
  title String @unique
  slug String
  mainImage String
  scale String
  location String
  published String?
  lowpoly String
  lowpolysize String?
  lowpolycount String?
  midpoly String
  midpolysize String?
  midpolycount String?
  highpoly String
  highpolysize String?
  highpolycount String?
  sponsorImage String
  sponsorName String
  sponsorLink String
  modelCategory ModelCategory[]
  modelMethod     ModelMethod[]
  author    User?    @relation(fields: [authorId], references: [id])
  authorId  Int?
}

model Method {
  id  Int  @default(autoincrement()) @id
  slug String
  mainImage String
  title String @unique
  textures Texture[]
}

model ModelMethod {
  id  Int  @default(autoincrement()) @id
  slug String
  mainImage String
  title String @unique
  model3d Model3d[]
}

model Category {
  id  Int  @default(autoincrement()) @id
  slug String
  mainImage String
  title String @unique
  textures Texture[]
}

model ModelCategory {
  id  Int  @default(autoincrement()) @id
  slug String
  mainImage String
  title String @unique
  model3d Model3d[]
}

model User {
  id        Int      @id @default(autoincrement())
  name      String?  
  textures Texture[]
  model3d Model3d[]
}