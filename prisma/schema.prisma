// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Texture {
  id Int @default(autoincrement()) @id
  title String
  slug String
  mainImage String
  category Category? @relation(fields: [categoryId], references: [id])
  categoryId Int?
}

model Category {
  id  Int  @default(autoincrement()) @id
  slug String
  mainImage String
  title String @unique
  textures Texture[]
}