datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Texture {
  id Int @default(autoincrement()) @id
  title String @unique
  slug String
  mainImage String
  scale String
  location String
  png2k String
  png4k String
  png8k String
  jpg2k String
  jpg4k String
  jpg8k String
  sponsorImage String
  sponsorName String
  sponsorLink String
  category Category[]
  method Method[]
}

model Method {
  id  Int  @default(autoincrement()) @id
  slug String
  mainImage String
  title String @unique
  textures Texture[]
}

model Category {
  id  Int  @default(autoincrement()) @id
  slug String
  mainImage String
  title String @unique
  textures Texture[]
}
